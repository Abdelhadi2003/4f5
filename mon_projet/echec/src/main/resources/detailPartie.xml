<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import echec.frontal.vues.controles.CanvasPartie?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="echec.frontal.vues.VueDetailPartie" styleClass="conteneur" id="vue-partie">

	<HBox id="orientation">
		<Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal" />
		<Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal" />
		<Label id="text" text="%jeu"></Label>
		<Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal" />
		<Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal" />
	</HBox>
	<Pane styleClass="petit-espace-vertical" />
	<Pane styleClass="petit-espace-vertical" />
	<Pane styleClass="petit-espace-vertical" />
	<HBox id="orientation">
		<Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal" />
		<Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal" />
		<ImageView>
			<image>
				<Image url="@echec.jpg" />
			</image>
		</ImageView>
		<Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal" />
		<Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal" />
	</HBox>
	<HBox VBox.vgrow="ALWAYS" styleClass="conteneur">

		<Pane styleClass="petit-espace-horizontal" />

		<CanvasPartie HBox.hgrow="ALWAYS" fx:id="canvasPartie" id="canvas-partie"></CanvasPartie>

		<Pane styleClass="petit-espace-horizontal" />

	</HBox>

	<HBox id="orientation">
		<Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal" />
		<Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal" />
		<Button fx:id="boutonQuitterDetailPartie" text="%quitterPartie" styleClass="gros-bouton" id="boutonQuitterDetailPartie"></Button>
		<Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal" />
		<Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal" />
	</HBox>

	<Pane styleClass="petit-espace-vertical" />

</VBox>