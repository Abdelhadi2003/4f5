<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import echec.frontal.vues.controles.FlexBoxPiecePerdu?>

<HBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="echec.frontal.vues.fragments.FragmentPiecePerdu" 
    styleClass="conteneur,fragment-piece-perdu">

    <Pane styleClass="grand-espace-horizontal"/>

    <FlexBoxPiecePerdu HBox.hgrow="ALWAYS" styleClass="conteneur,piece-perdu">

        <Label
            fx:id="labelPiecePerdu"
            styleClass="label-piece-perdu">
        </Label>

        <Pane HBox.hgrow="ALWAYS" minHeight="20"/>

        <Button 
            fx:id="boutonOuvrirPartie" 
            text="%ouvrirPartie"
            styleClass="gros-bouton">
        </Button>

    </FlexBoxPiecePerdu>

    <Pane styleClass="grand-espace-horizontal"/>

</HBox>
